#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;
use English qw( -no_match_vars );

use Test::More;

require_ok( '@abs_top_srcdir@/aptitude-robot' );

my $aptitude_command;

$aptitude_command = Aptitude::Robot::Command->new(
    config_dir => '@abs_top_srcdir@/t/testdata/force-install-1',
    force_install => 1,
);
is_deeply(
    [ $aptitude_command->command() ],
    ['aptitude', '-y', 'install', '~U', 'bar-', 'baz:', 'foo+', 'quux='],
    'with force-install + and - override : and/or ='
);

done_testing();
