#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;
use English qw( -no_match_vars );

use Test::More;

require_ok( '@srcdir@/t/../aptitude-robot' );

my $aptitude_command;

$aptitude_command = Aptitude::Robot::Command->new(
    config_dir => '@srcdir@/t/testdata/force-install-2',
    force_install => 1,
);
is_deeply(
    [ $aptitude_command->command() ],
    ['aptitude', '-y', 'full-upgrade', 'bar-', 'baz:', 'foo+', 'quux='],
    'with force-install + and - override : and/or = even when : or = come first'
);

done_testing();
