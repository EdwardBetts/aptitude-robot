#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;
use English qw( -no_match_vars );

use Test::More;

use IPC::Run qw( run );

my $in = '';
my $out;
my $err;
my $cmd;

$cmd = [
    '@abs_top_srcdir@/aptitude-robot',
    '--config-dir=@abs_top_srcdir@/t/testdata/force-install-1',
    '--force-install',
    '--show-cmdline',
];

ok(
    run( $cmd, \$in, \$out, \$err ),
    'should allow --force-install option on the command line',
);
is(
    $out,
    "aptitude -y install ~U bar- baz: foo+ quux=\n",
    'command line should not show hold and keep entries',
);

done_testing();
