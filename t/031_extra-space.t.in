#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;
use English qw( -no_match_vars );

use Test::More;

require_ok( '@abs_top_srcdir@/aptitude-robot' );

my $aptitude_command;

$aptitude_command = Aptitude::Robot::Command->new(config_dir => '@abs_top_srcdir@/t/testdata/extra-space');
is_deeply(
    [ $aptitude_command->command() ],
    ['aptitude', '-y', 'install', '~U', 'bar-', 'foo+'],
    'single file case',
);

done_testing();
