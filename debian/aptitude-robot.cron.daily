#!/bin/sh
[ -f /etc/default/aptitude-robot ] && . /etc/default/aptitude-robot

if [ "$RUN_DAILY" = "no" ]; then
    exit
fi

run_if_executable () {
    [ -x "$1" ] && "$@"
}

run_if_executable /usr/share/aptitude-robot/random-delay $MAX_RANDOM_DELAY_SECONDS
run_if_executable /usr/share/aptitude-robot/aptitude-robot-session
